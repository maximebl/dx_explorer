<UserControl
    x:Class="transformations.scalar_slider"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:transformations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel HorizontalAlignment="Stretch" >
        <TextBlock x:Name="scalar_label" Text="{x:Bind label}" 
                   RelativePanel.Above="scalar_slider" FontSize="12"/>

        <TextBox x:Name="scalar_text" Text="{x:Bind scalar_value, Mode=TwoWay}"
             RelativePanel.AlignRightWithPanel="True" FontSize="12"/>
    
        <Slider x:Name="scalar_slider" Orientation="Horizontal" StepFrequency="{x:Bind step_frequency}"
                Value="{x:Bind scalar_value, Mode=TwoWay}" 
                Minimum="{x:Bind scalar_min}" Maximum="{x:Bind scalar_max}" TickPlacement="None" IsTabStop="False"
                ManipulationMode="TranslateRailsX"
                ManipulationStarting="manip_starting"
                ManipulationCompleted="manip_completed"
                RelativePanel.Below="scalar_text"
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignRightWithPanel="True" />
    </RelativePanel>
</UserControl>
